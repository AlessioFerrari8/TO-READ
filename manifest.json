{
    "manifest_version": 3,
    "name": "To-read",
    "version": "1.2",
    "description": "Save links and read them in a new tab",
    "permissions": [
        "storage",
        "contextMenus",
        "tabs",
        "declarativeNetRequest"
    ],
    "host_permissions": [
        "https://flavortown.hackclub.com/*"
    ],
    "declarative_net_request": {
        "rule_resources": [
        {
            "id": "flavortown_rules",
            "enabled": true,
            "path": "rules.json"
        }
        ]
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "favicon.png"
    },
    "icons": {
        "16": "favicon.png",
        "48": "favicon.png",
        "128": "favicon.png"
    }
}